<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="propertyViewModel"
            type="com.sophieoc.realestatemanager.viewmodel.PropertyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_pictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pictures"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Add a picture"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/title_pictures"
            app:layout_constraintStart_toEndOf="@+id/title_pictures"
            app:layout_constraintTop_toTopOf="@+id/title_pictures" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_pictures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_pictures"
            app:layout_constraintTop_toBottomOf="@+id/title_pictures"
            tools:itemCount="3"
            tools:listitem="@layout/pictures_property_edit_format" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>