<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_arrow_brown_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_edit_create"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Add a property"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_save_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimary" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/title_edit_create" />

        <TextView
            android:id="@+id/title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Location"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/title_street_nbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="street n°:"
            app:layout_constraintStart_toStartOf="@+id/title_location"
            app:layout_constraintTop_toBottomOf="@+id/title_location" />

        <EditText
            android:id="@+id/street_nbr_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:background="@drawable/bkg_rectangle_brown"
            android:cursorVisible="true"
            android:gravity="end"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_apartment_nbr"
            app:layout_constraintTop_toTopOf="@+id/title_street_nbr">
            <requestFocus/>
        </EditText>

        <TextView
            android:id="@+id/title_apartment_nbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="apartment n°:"
            app:layout_constraintStart_toStartOf="@+id/title_street_nbr"
            app:layout_constraintTop_toBottomOf="@+id/street_nbr_input" />

        <EditText
            android:id="@+id/apartment_nbr_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/bkg_rectangle_dark"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            app:layout_constraintEnd_toEndOf="@+id/street_nbr_input"
            app:layout_constraintStart_toEndOf="@+id/title_apartment_nbr"
            app:layout_constraintTop_toTopOf="@+id/title_apartment_nbr" />

        <TextView
            android:id="@+id/title_street_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="street name:"
            app:layout_constraintStart_toStartOf="@+id/title_apartment_nbr"
            app:layout_constraintTop_toBottomOf="@+id/apartment_nbr_input" />

        <EditText
            android:id="@+id/street_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_rectangle_brown"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            app:layout_constraintEnd_toEndOf="@+id/street_nbr_input"
            app:layout_constraintStart_toStartOf="@+id/street_nbr_input"
            app:layout_constraintTop_toTopOf="@+id/title_street_name" />

        <TextView
            android:id="@+id/title_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="city:"
            app:layout_constraintStart_toStartOf="@+id/title_street_name"
            app:layout_constraintTop_toBottomOf="@+id/street_name_input" />

        <EditText
            android:id="@+id/city_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_rectangle_dark"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            app:layout_constraintEnd_toEndOf="@+id/street_name_input"
            app:layout_constraintStart_toStartOf="@+id/street_nbr_input"
            app:layout_constraintTop_toTopOf="@+id/title_city" />

        <TextView
            android:id="@+id/title_postal_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="postal code:"
            app:layout_constraintStart_toStartOf="@+id/title_city"
            app:layout_constraintTop_toBottomOf="@+id/city_input" />

        <EditText
            android:id="@+id/postal_code_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_rectangle_brown"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/city_input"
            app:layout_constraintStart_toStartOf="@+id/street_nbr_input"
            app:layout_constraintTop_toTopOf="@+id/title_postal_code" />

        <TextView
            android:id="@+id/title_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="region:"
            app:layout_constraintStart_toStartOf="@+id/title_postal_code"
            app:layout_constraintTop_toBottomOf="@+id/postal_code_input" />

        <EditText
            android:id="@+id/region_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_rectangle_dark"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/postal_code_input"
            app:layout_constraintStart_toStartOf="@+id/street_nbr_input"
            app:layout_constraintTop_toTopOf="@+id/title_region" />


        <TextView
            android:id="@+id/title_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="country:"
            app:layout_constraintStart_toStartOf="@+id/title_region"
            app:layout_constraintTop_toBottomOf="@+id/region_input" />

        <EditText
            android:id="@+id/country_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_rectangle_brown"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/region_input"
            app:layout_constraintStart_toStartOf="@+id/street_nbr_input"
            app:layout_constraintTop_toTopOf="@+id/title_country" />

        <TextView
            android:id="@+id/title_property_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Property type:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_country"
            app:layout_constraintTop_toBottomOf="@+id/title_country" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/types_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:entries="@array/property_types"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/title_property_type"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Price:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_property_type"
            app:layout_constraintTop_toBottomOf="@+id/title_property_type" />

        <EditText
            android:id="@+id/price_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bkg_rectangle_dark"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="@+id/title_price"
            app:layout_constraintEnd_toStartOf="@+id/ic_dollar"
            app:layout_constraintStart_toStartOf="@+id/country_input" />

        <TextView
            android:id="@+id/ic_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/types_spinner"
            app:layout_constraintTop_toTopOf="@+id/title_price" />

        <TextView
            android:id="@+id/title_nbr_of_beds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Number of bedrooms:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_price"
            app:layout_constraintTop_toBottomOf="@+id/title_price" />

        <EditText
            android:id="@+id/nbr_of_beds_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bkg_rectangle_brown"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/title_nbr_of_beds"
            app:layout_constraintEnd_toStartOf="@+id/ic_dollar"
            app:layout_constraintStart_toEndOf="@+id/title_nbr_of_beds" />

        <ImageView
            android:id="@+id/ic_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_king_bed_24"
            app:layout_constraintEnd_toEndOf="@+id/ic_dollar"
            app:layout_constraintTop_toTopOf="@+id/title_nbr_of_beds" />

        <TextView
            android:id="@+id/title_nbr_of_bath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Number of bathrooms:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_nbr_of_beds"
            app:layout_constraintTop_toBottomOf="@+id/title_nbr_of_beds" />

        <EditText
            android:id="@+id/nbr_of_bath_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bkg_rectangle_dark"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/title_nbr_of_bath"
            app:layout_constraintEnd_toStartOf="@+id/ic_dollar"
            app:layout_constraintStart_toStartOf="@+id/nbr_of_beds_input" />

        <ImageView
            android:id="@+id/ic_bath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_bathtub_24"
            app:layout_constraintEnd_toEndOf="@+id/ic_bed"
            app:layout_constraintTop_toTopOf="@+id/title_nbr_of_bath" />

        <TextView
            android:id="@+id/title_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Surface:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_nbr_of_bath"
            app:layout_constraintTop_toBottomOf="@+id/title_nbr_of_bath" />

        <EditText
            android:id="@+id/surface_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bkg_rectangle_brown"
            android:cursorVisible="true"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/title_surface"
            app:layout_constraintEnd_toStartOf="@+id/ic_dollar"
            app:layout_constraintStart_toStartOf="@+id/price_input" />

        <TextView
            android:id="@+id/sqft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sqft"
            app:layout_constraintBottom_toBottomOf="@+id/surface_input"
            app:layout_constraintEnd_toEndOf="@+id/ic_bath" />

        <TextView
            android:id="@+id/title_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Availability:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_surface"
            app:layout_constraintTop_toBottomOf="@+id/title_surface" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/availability_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:entries="@array/property_availability"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/title_availability"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/title_availability"
            app:layout_constraintTop_toBottomOf="@+id/title_availability" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bkg_rectangle_dark"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="@+id/sqft"
            app:layout_constraintStart_toStartOf="@+id/title_description"
            app:layout_constraintTop_toBottomOf="@+id/title_description" />


        <TextView
            android:id="@+id/title_pictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pictures"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/description_input"
            app:layout_constraintTop_toBottomOf="@id/description_input" />

        <Button
            style="@style/ButtonBorderlessStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Add a picture"
            app:layout_constraintBottom_toBottomOf="@+id/title_pictures"
            app:layout_constraintStart_toEndOf="@+id/title_pictures"
            app:layout_constraintTop_toTopOf="@+id/title_pictures" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_pictures"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/pictures_property_edit_format"
            tools:itemCount="3"
            app:layout_constraintEnd_toEndOf="@+id/description_input"
            app:layout_constraintStart_toStartOf="@+id/title_pictures"
            app:layout_constraintTop_toBottomOf="@+id/title_pictures" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>