<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sophieoc.realestatemanager">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".AppController"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY" />

        <activity android:name=".view.activity.SplashScreenActivity" android:theme="@style/SplashScreenTheme">
        <!--<activity android:name=".view.activity.MainActivity"> -->
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity android:name=".view.activity.MainActivity" />
    <activity android:name=".view.activity.LoginActivity" />
    <activity android:name=".view.activity.MapActivity" />
    <activity android:name=".view.activity.UserProfileActivity" />
        <activity android:name=".view.activity.PropertyDetailActivity" />
        <activity android:name=".view.activity.AddPropertyActivity" />
        <!-- <activity android:name=".view.activity.SplashScreenActivity" /> -->

        <provider
            android:authorities="com.sophieoc.realestatemanager.provider"
            android:name=".provider.PropertyContentProvider"
            android:exported="true" />
</application>

    </manifest>